<div class='mt-2'>
  <div class='shadow-md p-10'>
    <div data-controller='posts'>
      <%= form_with model:[@group, @group.posts.create!(user_id: current_user.id)], data:{action: 'posts#addPost'} do |f| %>
        <div class="mt-2">
          <%= f.label :title %>
          <%= f.text_field :title, autofocus: true, placeholder: 'Title of the Post', data: {target: 'posts.title' }, class: 'mt-1 px-3 py-2 bg-white border shadow-sm border-slate-300 placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-sky-500 block w-full rounded-md sm:text-sm focus:ring-1' %>
        </div>

        <div class="mt-2">
          <%= f.label :content %>
          <%= f.text_field :content, autofocus: true, placeholder: 'Content of the Post', data: {target: 'posts.content' }, class: 'mt-1 px-3 py-2 bg-white border shadow-sm border-slate-300 placeholder-slate-400 focus:outline-none focus:border-sky-500 focus:ring-sky-500 block w-full rounded-md sm:text-sm focus:ring-1' %>
        </div>

        <div class="actions mt-5">
          <%= f.submit "Create New Post", class: "bg-blue-600 inline-block text-white text-xl rounded p-1 px-2 cursor-pointer" %>
        </div>
      <% end %>

    <ul data-target='posts.add'>
    </ul>

    </div>
  </div>
</div>
