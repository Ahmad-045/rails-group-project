
<div class='mt-3'>
  <h2 class='text-2xl font-bold underline'>Group Details</h2>
  <p class='float-right'>
    <%#= link_to 'Create New Post', new_group_post_path(@group.id), class: 'ml-2 focus:outline-none text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm p-2 mr-2 mb-2' %>
  <p>
  <div class='clear-both'></div>
</div>
<p class='mt-2'><strong>Group Name: </strong><%= @group.name %></p>
<p class='mt-2'><strong>Total Members: </strong><%= @group.users.count%></p>


<div class='grid grid-cols-4 mb-2 gap-4'>
  <div class='col-span-3' ><%= render 'groups/new_post' %></div>
  <div>
    <p>Members</p>
    <div class='grid grid-cols-12'>
      <% @group_members.each do |member| %>
        <div class='inline-block col-span-11'><%= member.email %> </div>
        <%= button_to 'x', leave_group_path(@group, user_id: member),class:'bg-red-600 text-white w-5 h-5 flex justify-center items-center' %>
      <% end %>
    </div>
  </div>
</div>
<hr>

<div>
  <%= render(PostComponent.with_collection(@group_posts, current_user: current_user)) %>
</div>
